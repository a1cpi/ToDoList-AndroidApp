<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#95FFE9"
    android:orientation="vertical"
    android:padding="20sp">

    <TextView
        android:id="@+id/userTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20sp"
        android:layout_marginRight="10sp"
        android:fontFamily="@font/fredoka_light"
        android:textSize="20sp"
        android:text="C168, Aaryahi"
        android:textColor="#00A684" />

    <TextView
        android:id="@+id/titleCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="20sp"
        android:text="Completed Tasks"
        android:textSize="40sp"
        android:textColor="#004234"
        android:fontFamily="@font/chewy"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/empty_completed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No completed tasks!"
        android:textSize="30sp"
        android:textColor="#004234"
        android:fontFamily="@font/league_spartan_light"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_completed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25sp"
        android:backgroundTint="#004234"
        android:textColor="#D0FFF6"
        android:textSize="20sp"
        android:fontFamily="@font/chewy"
        android:text="Go Back" />
</LinearLayout>
