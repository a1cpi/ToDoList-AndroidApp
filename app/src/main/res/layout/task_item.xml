<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15sp"
    android:background="#95FFE9"
    android:gravity="center_vertical">

    <CheckBox
        android:id="@+id/task_checkbox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:buttonTint="#004234" />

    <ImageView
        android:id="@+id/drag_handle"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:contentDescription="Drag to reorder"
        android:src="@android:drawable/ic_menu_sort_by_size"
        app:tint="#004234"
        android:layout_marginEnd="10dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/task_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_light"
            android:text="Task"
            android:textColor="#004234"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/task_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#004234"
            android:fontFamily="@font/fredoka_light"
            android:text="Date and Time"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/task_deadline_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The deadline for this task has passed"
            android:textColor="#D32F2F"
            android:fontFamily="@font/fredoka_light"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/edit_task_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="Edit Task"
        android:src="@android:drawable/ic_menu_edit"
        app:tint="#004234" />
</LinearLayout>
